<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.enigma_pc.smartmailforblinds"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <application
        android:name="com.example.enigma_pc.smartmailforblinds.SmartSingletonClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"

        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:name"
        >
        <activity android:name=".SplashActiviy"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SendMailActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ChooserActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".RetrieveMailsActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".ReadMailActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".RegisterActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>